[user]
	name    = Thibault Jamet
    email   = tjamet@users.noreply.github.com
[color]
	diff    = auto
	branch  = auto
	status  = auto
[alias]
	co      = checkout
	br      = branch
	st      = status
[merge]
    tool    = meld
[mergetool]
    prompt  = false
[diff]
    tool    = meld
[difftool]
    prompt  = false
[push]
    default = simple
[mergetool "meld"]
    cmd     = meld \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[difftool "meld"]
    cmd     = meld \"$LOCAL\" \"$REMOTE\"
